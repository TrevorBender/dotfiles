vbell on
autodetach on
defscrollback 5000
startup_message off
caption always "%w"
hardstatus alwayslastline "%H %C%a %M %d, %Y Load: %l "

term screen-256color
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
attrcolor b ".I"
defbce on

escape '`a'

# start at screen 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
